
<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="postTitle" placeholder="" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="post">Post</label>
        <textarea class="form-control" name="postBody" id="" cols="40" rows="10"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include('partials/footer'); -%>